#!/bin/bash
# Opens eww dashboard

LOCK_FILE="$HOME/.cache/eww.lock"
EWW_BIN="$HOME/.local/bin/eww"

run() {
    # bspc config left_padding 300

    ${EWW_BIN} open-many \
        outer-window \
        profile \
        layout-manager \
        system-manager \
        weather \
        date \
        music-player \
        quote
}

# Run eww daemon if not running
if [[ ! `pidof eww` ]]; then
    ${EWW_BIN} daemon
    sleep 1
fi

# Open widgets
if [[ ! -f "$LOCK_FILE" ]]; then
    touch "$LOCK_FILE"
    run
else
    ${EWW_BIN} close \
        outer-window \
        profile \
        line \
        system-manager \
        layout-manager \
        music-player \
        weather \
        date \
        quote \
        music-info
    rm "$LOCK_FILE"
fi
