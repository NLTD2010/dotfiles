#!/bin/bash
# Opens eww dashboard

case $1 in
    "open")
        $HOME/.local/bin/eww daemon; sleep 0.5

        $HOME/.local/bin/eww close-all
        $HOME/.local/bin/eww open-many eww-window profile date player system-info powermenu
        exit
    ;;

    "close")
        $HOME/.local/bin/eww close-all;
        exit
    ;;
esac
