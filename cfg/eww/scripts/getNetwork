#!/bin/sh

case $1 in
	"icon")
		[ $(cat /sys/class/net/w*/operstate) = down ] && echo "" && exit
		echo ""
		;;
	"name")
		SSID=$(iwgetid -r)
		[ -z "$SSID" ] && echo "" && exit
		echo "$SSID"
		;;
	"color")
		[ $(cat /sys/class/net/w*/operstate) = down ] && echo "$bgSecondary" && exit
		echo "#1c2325"
		;;
esac
