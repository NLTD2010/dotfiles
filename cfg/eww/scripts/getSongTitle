#!/bin/bash

title=$(playerctl metadata --format '{{ title }}')
count=$(echo -n "$title" | wc -c)

if [ -z "$title" ]; then
    echo "Nothing Playing";
else
    if [[ "$title" =~ ^[一-龠]+|[ぁ-ゔ]+|[ァ-ヴー]+ ]]; then
        echo $(playerctl metadata --format '{{ title }}' | awk '{ print substr($1, 1, 10) }')...
    else
        echo $title
    fi 
fi